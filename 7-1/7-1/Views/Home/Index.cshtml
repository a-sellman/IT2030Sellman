@{
    ViewData["Title"] = "Home";
}

<style>

    button {
        background-color: white;
        color: black;
        font-size: 20px;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

    li {
        float: left;
    }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

            li a:hover {
                background-color: #111;
            }
</style>

<ul class="vertical col-sm-8 col-md-10 col-lg-12">
    <li style="color:white"> My Website </li>
    <li>@Html.ActionLink("Home", "Index")</li>
    <li>@Html.ActionLink("Contact", "Contact")</li>
    <li>@Html.ActionLink("About", "About")</li>
