@model List<Contact>
@{
ViewBag.Title = "Contacts";
}

<style>
    .jumbotron {
        text-align: center;
        background-color: darkgrey;
        color: white;
    }
</style>
<div class="jumbotron col-lg-12 col-sml-8">
<h2> Contact List</h2>
    </div>
<a asp-controller="Contact" asp-action="Add">Add New Contact</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            >
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.FName</td>
                <td>@contact.LName</td>
                <td>@contact.PhoneNumber</td>
                <td>@contact.Email</td

>               <td>
                <a asp-controller="Contact" asp-action="Edit"
                    asp-route-id="@contact.CategoryID">Edit</a>
                <a asp-controller="Contact" asp-action="Delete"
                   asp-route-id="@contact.CategoryID">Delete</a>
                
                </td>
            </tr>
        }
    </tbody>
</table>