@model List<Contact>
@{
ViewBag.Title = "Contacts";
}

<h2> Contact List</h2>

<a asp-controller="Contact" asp-action="Add">Add New Contact</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
            >
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.FName</td>
                <td>@contact.LName</td>
                <td>@contact.PhoneNumber</td>
                <td>@contact.Email</td

>               <td>
                <a asp-controller="Contact" asp-action="Edit"
                    asp-route-id="@contact.CategoryID">Edit</a>
                <a asp-controller="Contact" asp-action="Delete"
                   asp-route-id="@contact.CategoryID">Delete</a>
                
                </td>
            </tr>
        }
    </tbody>
</table>