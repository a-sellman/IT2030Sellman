@model Contact

@{
    ViewData["Title"] = $"{ ViewBag.Action} Contact";
}

<h2> @ViewBag.Action Contact</h2>

<form asp-action="Edit" method="post">

    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="ContactId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label asp-for="Firstname">First name</label>
                <input asp-for="Firstname" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Lastname">Last name</label>
                <input asp-for="Lastname" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="CategoryID"></label>
                <select asp-for="CategoryID" class="form-control" />
                <option value="0"> Select a category</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId"> c.Name</option>
                }
                </select>
            </div>

            <div class="form-group">
                <input asp-for="Organization" class="form-control" />
            </div>
        </div>
    </div>
</form>

<button type="submit" class="btn btn-dark">@ViewBag.Action</button>
@if (ViewBag.Action == "Edit")
{
    <a asp-action="Details" asp-controller="Contact"
       asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug"
       class="btn btn-dark">Cancel</a>
}
else
{
    <a asp-action="Index" asp-controller="Home"
       class="btn btn-dark">Cancel</a>

}