@model Contact

@{
    ViewData["Title"] = "Contact Details";
}

<h2> Contact Details</h2>

<ul class="list-group">
    <li class="list-group-item">
        <label class="w-10"> Name:</label>
        @Model.Firstname @Model.Lastname
    </li>
    <li class="list-group-item">
        <label class="w-10"> Phone:</label>
        @Model.Phone
    </li>
    <li class="list-group-item">
        <label class="w-10"> Email:</label>
        @Model.Email
    </li>
    <li class="list-group-item">
        <label class="w-10"> Category:</label>
        @Model.Category.Name
    </li>
    <li class="list-group-item">
        <label class="w-10"> Organization:</label>
        @Model.Organization
    </li>
    <li class="list-group-item">
        <label class="w-10"> Date Added:</label>
        @Model.DateAdded.ToShortDateString() at @Model.DateAdded.ToShortDateString()

        <a asp-action="Edit" asp-controller="Contact"
           asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug"
           class="btn btn-dark"> Edit</a>

        <a asp-action="Delete" asp-controller="Contact"
           asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug"
           class="btn btn-dark"> Delite</a>
        <a asp-action="Index" asp-controller="Home"
           class="btn btn-dark"> Home</a>
    </li>
</ul>