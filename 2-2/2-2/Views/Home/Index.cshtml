@{
    ViewData["Title"] = "Tip Calculator";
}
@model TipCalculation

<h1 class="title">Tip Calculator</h1>
<br />

<span asp-validation-for="CostOfMeal"></span>

<form method="post" class="form" name="tipCalculationForm">

    <div class="grid-container">

        <div class="grid-label">Cost of meal:</div>
        <div class="grid-item"><input asp-for="CostOfMeal" /></div>

        <div class="grid-label">15% tip:</div>
        <div class="grid-item">@String.Format("{0:c}", Model.Tip15Percent)</div>

        <div class="grid-label">20% tip:</div>
        <div class="grid-item">@String.Format("{0:c}", Model.Tip20Percent)</div>

        <div class="grid-label">25% tip:</div>
        <div class="grid-item">@String.Format("{0:c}", Model.Tip25Percent)</div>

        <div class="grid-row"><button type="submit" name="Calculate">Calculate</button> <a href="" onclick="document.tipCalculationForm.clear();">Clear</a></div>
    </div>
</form>